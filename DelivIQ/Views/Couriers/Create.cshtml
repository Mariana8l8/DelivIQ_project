@{
    ViewData["Title"] = "Новий кур'єр";
}

<div class="form-card">
    <h2>Новий кур'єр</h2>
    <form asp-controller="Couriers" asp-action="Create" method="post">
        <input name="fullName" placeholder="Ім'я та прізвище" required class="input-field" />
        <input name="phone" placeholder="Телефон" required class="input-field" />
        <select name="transport" class="input-field">
            <option>Велосипед</option>
            <option>Автомобіль</option>
            <option>Скутер</option>
        </select>
        <input name="latitude" type="number" step="0.000001" placeholder="Широта" required class="input-field" />
        <input name="longitude" type="number" step="0.000001" placeholder="Довгота" required class="input-field" />
        <button class="btn-primary">Зберегти</button>
    </form>
</div>
