@{
    ViewData["Title"] = "Нове замовлення";
}

<div class="form-card">
    <h2>Нове замовлення</h2>
    <form asp-controller="Orders" asp-action="Create" method="post">
        <input name="customerName" placeholder="Ім'я клієнта" class="input-field" />
        <input name="phone" placeholder="Телефон" class="input-field" />
        <input name="latitude" placeholder="Широта" step="0.000001" required class="input-field" />
        <input name="longitude" placeholder="Довгота" step="0.000001" required class="input-field" />
        <input name="price" type="number" step="0.01" placeholder="Сума замовлення" class="input-field" />
        <button class="btn-primary">Створити замовлення</button>
    </form>
</div>
