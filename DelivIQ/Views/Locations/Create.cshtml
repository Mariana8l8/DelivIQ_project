@{
    ViewData["Title"] = "Нова локація";
}

<div class="form-card">
    <h2>Нова локація</h2>
    <form asp-controller="Locations" asp-action="Create" method="post">
        <input name="name" placeholder="Назва закладу" required class="input-field" />
        <input name="latitude" type="number" step="0.000001" placeholder="Широта" required class="input-field" />
        <input name="longitude" type="number" step="0.000001" placeholder="Довгота" required class="input-field" />
        <input name="contactPhone" placeholder="Контактний телефон" class="input-field" />
        <button class="btn-primary">Зберегти</button>
    </form>
</div>
